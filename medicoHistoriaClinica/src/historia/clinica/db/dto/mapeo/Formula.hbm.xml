<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="historia.clinica.db.dto.modelo.Formula" table="formula">
        <id name="id" type="int" access="field">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="fecha" type="java.util.Date" >
            <column name="fecha" />
        </property>
        <property name="usuarioConectado" type="java.lang.String" access="field">
            <column name="usuario_conectado" />
        </property>
        <property name="planManejo" type="java.lang.String" access="field">
            <column name="plan_manejo" />
        </property>
        <property name="atencionId" type="int" >
            <column name="atencion_id" />
        </property>
        <set name="medicamentos" table="formula_has_medicamento" inverse="false" lazy="true" access="field" cascade="all">
            <key>
                <column name="formula_id" />
            </key>
            <one-to-many class="historia.clinica.db.dto.modelo.Medicamento" />
        </set>
    </class>
</hibernate-mapping>
